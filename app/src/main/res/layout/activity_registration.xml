<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="520dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_backgroud"
            android:backgroundTint="#F3F3F3"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/registrationclose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_close_clear_cancel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/greatvibes"
                android:text="Registration"
                android:textSize="30dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/cod" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/registrationname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffff"
                    android:hint="your name"
                    android:inputType="text"
                    android:lineHeight="1dp"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:textSize="13dp" />


            </com.google.android.material.textfield.TextInputLayout>

            <!--
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/registrationinstitute"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffff"
                    android:hint="Location"

                    android:inputType="text"
                    android:lineHeight="1dp"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:textSize="13dp" />


            </com.google.android.material.textfield.TextInputLayout>
-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/registrationemail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffff"
                    android:hint="email"
                    android:inputType="textEmailAddress"
                    android:lineHeight="1dp"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:textSize="13dp" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/registrationpassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#Ffff"
                    android:backgroundTint="#FFFFFF"
                    android:hint="password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:textSize="13dp" />


            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/registrationbutton"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_backgroud"
                android:backgroundTint="#3C4B9F"
                android:elevation="20dp"
                android:text="Registration"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/gotologin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Already have account?Login" />


        </LinearLayout>
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/load"
            android:backgroundTint="#fff"
            android:visibility="invisible"
            android:id="@+id/progresslogin"
            android:layout_centerInParent="true"/>
        />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>